                        <!-- Menampilkan Data Form Pengumpulan Submission -->
                        <div class="kotak task-form-container1">
                            <br>
                            <div class="avatar-container">
                                <div class="avatar">
                                    <img src="/img/profile.png" alt="Avatar"
