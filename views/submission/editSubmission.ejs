                                <hr>
                            </div>  
                            <!-- End -->

                            <!-- Form Delete Data Submission -->
                            <div class="input-group" >
                                <!-- <form action="/submission/deleteSubmission/<%= item.id%>/user/<%= user.user_id%>" method="post" id="btn-del "> -->
                                    <h2 class="answer-title mb-1" style="margin-right: 760px;">
                                        &nbsp; Answer</h2>
                                <!-- </form> -->
                            </div>
                            <!-- End -->

                            <!-- Form Edit Data Submission -->
                            <form class="" action="/submission/editSubmission/<%= item.id%>" method="post" id="form-edit">
                                <ul style="margin-right: 70px;">
                                    <li class="list-group-item" >
                                        <div class="file-upload-container">
                                            <div class="upload-container">
                                                <p style="color: black; margin-left: 22px;font-weight: bold; font-size: 18px;">Upload File</p>
                                                    <button class=" btn-dark" style="border-radius:15px; margin-left: 22px; height: 45px;" type="button">
                                                        <p style=" text-align: center;"><%= item.uploaded_file %></p>
                                                    </button>   
                                            </div>
                                        </div>
                                    </li>
                                    <li class="list-group-item" >
                                        <div class="description-section">
                                            <p style="color: black; margin-left:2px;font-weight: bold;" for="floatingInputDesc">Comments</p>
                                            <textarea placeholder="Add a comment (optional)" 
                                            type="text" class="form-control" id="floatingInputDesc" name="description" style="margin-left: 1px;"><%= item.description || '' %></textarea>
                                        </div>
                                    </li>
                                </ul>
                            </form>
                            <!-- End -->
                            
                            <div class="action-buttons m-auto mb-1" >
                                <!-- Button Cancel Edit -->
                                <a href="/submission/upload/<%= form.form_id%>"  class="cancel-button btn btn-secondary">
                                    Cancel
                                </a>
                                <!-- Button Edit -->
                                <button form="form-edit" class="upload-button btn btn-lg btn-success me-3" type="submit">
                                    Update
                                </button>
                            </div>
                        </div>
